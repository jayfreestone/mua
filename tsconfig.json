{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2016"
    ],
    "rootDirs": ["."],
    "paths": {
      "components/*": ["components/*"],
      "hoc/*": ["components/hoc/*"],
      "apollo/*": ["apollo/*"],
      "styles/*": ["styles/*"],
    }
  }
}